@model IEnumerable<SimpleContactList.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<div class="col-lg-12">
    <div class="page-header">
        <h1 id="myContacts">My Contacts</h1>
        <p>
            @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default" })
        </p>
    </div>
    <div class="bs-component">
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ContactType)</th>
                    <th>Name</th>
                    <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                    <th>@Html.DisplayNameFor(model => model.Number)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ContactType)</td>
                        <td>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td class="text-right">
                            @Html.ActionLink("Edit", "Edit", new { id=item.ContactId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id=item.ContactId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id=item.ContactId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
        <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
    </div><!-- /example -->
</div>
